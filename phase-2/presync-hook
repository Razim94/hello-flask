apiVersion: batch/v1
kind: Job
metadata:
  name: presync-hook
  annotations:
    argocd.argoproj.io/hook: PreSync
    argocd.argoproj.io/hook-delete-policy: HookSucceeded
spec:
  template:
    spec:
      containers:
      - name: presync
        image: busybox
        command: ["echo", "Running PreSync hook - e.g., DB migration"]
      restartPolicy: Never
